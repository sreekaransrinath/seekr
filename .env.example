# OpenRouter API Configuration (Required for LLM)
OPENROUTER_API_KEY=your_api_key_here

# Fact-Checking APIs (At least one required for fact-checking)
PERPLEXITY_API_KEY=your_perplexity_key_here
TAVILY_API_KEY=your_tavily_key_here
GOOGLE_FACT_CHECK_API_KEY=your_google_key_here
SERPAPI_KEY=your_serpapi_key_here  # Optional

# Model Configuration (optional - can be overridden via CLI)
DEFAULT_MODEL=anthropic/claude-4.5-sonnet

# Processing Configuration
MAX_PARALLEL_TASKS=5
MAX_RETRIES=3
REQUEST_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
